.search-wrap {
  min-height: 100%;
  background: #f4f4f4;
}
.search-input {
  height: 88rpx;
  padding: 16rpx 114rpx 16rpx 30rpx;
  border-top: 2rpx solid #e7e7e7;
  border-bottom: 2rpx solid #e7e7e7;
  box-sizing: border-box;
  position: relative;
  background: #fff;
}
.search-input input {
  width: 100%;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 24rpx;
  background-color: #f4f4f4;
  border-radius: 28rpx;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  /* text-align: center; */
}
.search-input .search-back-btn {
  position: absolute;
  width: 114rpx;
  height: 88rpx;
  line-height: 88rpx;
  right: 0;
  top: 0;
  color: #666;
  font-size: 32rpx;
  text-align: center
}
.search-hot {
  padding: 25rpx 30rpx 30rpx;
  background: #fff;
}
.search-hot .search-hot-title {
  line-height: 50rpx;
  color: #999;
  font-size: 24rpx;
}
.search-hot .search-hot-label-area text {
  display: inline-block;
  height: 55rpx;
  line-height: 55rpx;
  border: 2rpx solid #e7e7e7;
  color: #666;
  font-size: 28rpx;
  padding: 0 35rpx;
  border-radius: 28rpx;
  margin-right: 15rpx;
  margin-top: 15rpx;
}
.search-hot .search-hot-chenge-btn {
  width: 190rpx;
  height: 55rpx;
  line-height: 55rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin: 35rpx auto 0;
  text-indent: 20rpx;
  border: 2rpx solid #e7e7e7;
  border-radius: 28rpx;
  position: relative;
}
.search-hot .search-hot-chenge-btn image {
  width: 24rpx;
  height: 25rpx;
  position: absolute;
  left: 34rpx;
  top: 15rpx;
}
.search-history {
  margin-top: 16rpx;
  background: #fff;
  padding: 0 30rpx 30rpx;
}
.search-history .search-history-title {
  height: 76rpx;
  line-height: 76rpx;
  color: #999;
  font-size: 24rpx;
  border-bottom: 2rpx solid #e7e7e7;
}
.search-history .search-history-list-item {
  height: 82rpx;
  line-height: 82rpx;
  padding-left: 50rpx;
  position: relative;
  color: #666;
  font-size: 28rpx;
  border-bottom: 2rpx solid #e7e7e7;
}
.search-history .search-history-list-item image {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  left: 0;
  top: 26rpx;
}
.search-history .search-history-clear-btn {
  width: 278rpx;
  height: 55rpx;
  line-height: 55rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin: 35rpx auto 0;
  text-indent: 20rpx;
  border: 2rpx solid #e7e7e7;
  border-radius: 28rpx;
  position: relative;
}
.search-history .search-history-clear-btn image {
  width: 28rpx;
  height: 31rpx;
  position: absolute;
  left: 34rpx;
  top: 12rpx;
}
.search-result {
  margin-top: 16rpx;
  padding: 1rpx 30rpx 30rpx;
  background: #fff;
}