@import "/wxParse/wxParse.wxss";
.read {
  padding-bottom: 260rpx;
}
.read image {
  width: 100%
}
.read-bottom {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  background: #fff;
  z-index: 9999;
  border-top: 2rpx solid #e7e7e7;
}
.read-bottom-top {
  width: 100%;
  height: 160rpx;
  border-bottom: 2rpx solid #e7e7e7;
  display: flex;
}
.read-bottom-top .bottom-btn {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  text-align: center;
  line-height: 210rpx;
  position: relative;
}
.read-bottom-top .bottom-btn.collect image {
  width: 40rpx;
  height: 35rpx;
  position: absolute;
  left: 50%;
  margin-left: -20rpx;
  top: 40rpx;
}
.read-bottom-top .bottom-btn.directory image,
.read-bottom-top .bottom-btn.like image {
  width: 38rpx;
  height: 38rpx;
  position: absolute;
  left: 50%;
  margin-left: -19rpx;
  top: 40rpx;
}
.read-bottom-cp {
  width: 100%;
  height: 100rpx;
  padding: 20rpx 0;
  line-height: 100rpx;
  box-sizing: border-box;
  display: flex;
}
.cp-btn {
  flex: 1;
  text-align: center;
  line-height: 60rpx;
}
.cp-btn .cp-text {
  position: relative;
  display: inline-block;
  color: #666;
  font-size: 30rpx;
  line-height: 30rpx;
}
.cp-btn .cp-text image {
  position: absolute;
  width: 14rpx;
  height: 24rpx;
  top: 3rpx;
}
.cp-btn.prev {
  border-right: 2rpx solid #e7e7e7;
}
.cp-btn.prev .cp-text {
  padding-left: 30rpx;
}
.cp-btn.next .cp-text {
  padding-right: 30rpx;
}
.cp-btn.prev .cp-text image {
  left: 0;
}
.cp-btn.next .cp-text image {
  right: 0;
}

.read-setting {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  z-index: 1000;
}
.read-setting .read-setting-box {
  height: 100rpx;
  width: 100%;
  background: rgba(0, 0, 0, .8);
  box-sizing: border-box;
  padding: 0 50rpx;
  display: flex;
}
.read-setting .read-setting-box .setting-item {
  flex: 1;
  position: relative;
}
.setting-item image {
  position: absolute;
  left: 50%;
  top: 50%;
}
.setting-item.home image {
  width: 44rpx;
  height: 38rpx;
  margin-left: -22rpx;
  margin-top: -19rpx;
}
.setting-item.mulu image {
  width: 34rpx;
  height: 28rpx;
  margin-left: -17rpx;
  margin-top: -14rpx;
}
.setting-item.set image {
  width: 38rpx;
  height: 36rpx;
  margin-left: -19rpx;
  margin-top: -18rpx;
}
.setting-item.prev image {
  width: 18rpx;
  height: 30rpx;
  margin-left: -9rpx;
  margin-top: -15rpx;
}
.setting-item.next image {
  width: 18rpx;
  height: 30rpx;
  margin-left: -9rpx;
  margin-top: -15rpx;
}
.read-setting-font {
  width: 100%;
  height: 134rpx;
  line-height: 134rpx;
  bottom: 100rpx;
  background: rgba(42, 42, 42, .9);
  box-sizing: border-box;
  padding: 0 54rpx;
  font-size: 30rpx;
  color: #fff;
  position: fixed;
}
.font-selection {
  position: absolute;
  width: 542rpx; 
  height: 134rpx;
  top: 0;
  left: 174rpx;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
.font-selection .selection-item {
  width: 146rpx;
  height: 66rpx;
  line-height: 66rpx;
  border: 2rpx solid #999;
  border-radius: 6rpx;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
}
.font-selection .selection-item.selected {
  color: #ff5977;
  border-color: #ff5977;
}