/* pages/bookshelf.wxss */
.bookshelf-page {
  position: relative;
  box-sizing: border-box;
}
.bookshelf-tab {
  border-top: 2rpx solid #e7e7e7;
  border-bottom: 2rpx solid #e7e7e7;
  display: flex;
  flex-direction:row;
}
.bookshelf-tab .tab-item {
  height: 78rpx;
  line-height: 78rpx;
  width: 50%;
  font-size: 30rpx;
  color: #999;
  text-align: center;
  position: relative;
}
.bookshelf-tab .tab-item.current {
  color: #ff5977;
}
.bookshelf-tab .tab-item.current::after {
  content: '';
  display: block;
  width: 30rpx;
  height: 6rpx;
  position: absolute;
  background-color: #ff5977;
  left: 50%;
  margin-left: -15rpx;
  bottom: 0;
}
.bookshelf-search {
  padding: 15rpx 30rpx;
  border-bottom: 2rpx solid #e7e7e7;
}
.bookshelf-search input {
  width: 100%;
  height: 53rpx;
  line-height: 53rpx;
  font-size: 24rpx;
  background-color: #f4f4f4;
  border-radius: 26rpx;
  text-align: center;
}
.bookshlef-list {
  padding: 15rpx 30rpx;
}