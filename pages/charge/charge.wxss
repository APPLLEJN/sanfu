.item-wrap.advice-wrap {
  padding: 1.5625rem .9375rem;
}
.advice-wrap .advice-content {
  padding: 30rpx;
  background-color: #f7f6f2;
  position: relative;
}
.advice-content .advice-content-p {
  color: #666;
  font-size: 24rpx;
  line-height: 36rpx;
}
.advice-content image {
  width: 154rpx;
  height: 176rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -88rpx;
}
.advice-content .advice-title {
  color: #ddc69e;
  font-size: .9375rem;
  font-weight: 600;
  margin-bottom: .5rem;
}




